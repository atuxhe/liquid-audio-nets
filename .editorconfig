root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_size = 4

[*.{js,ts,jsx,tsx,json,yaml,yml}]
indent_size = 2

[*.{rs,toml}]
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.{md,rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf